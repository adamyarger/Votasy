<% @comments.each do |comment| %>
	<div class="comment">

		<div class="comment-info">
			<span class="comment-name"><%= comment.user.name %></span> -
			<span class="date" ><%= time_ago_in_words(comment.created_at) %> ago</span>
		</div>
			<div class="comment-body">
				<%= comment.body %>
			</div>
	</div>
<% end %>