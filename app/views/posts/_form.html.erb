<%= form_for @post, :url => posts_path, :html => { :multipart => true } do |post| %>
	<%= post.file_field :image %>
  <%= post.text_area :content, placeholder: 'Write a description.', class: 'form-control' %>
  <%= post.text_field :tag_list, placeholder: 'Tags (seperate by commas)' %>
  <%= post.submit "Post" %>
<% end %>